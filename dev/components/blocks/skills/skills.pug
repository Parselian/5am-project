mixin SkillCard(iconId, title, text)
    .skills__card
        svg.skills__card-icon
            use(xlink:href=`./assets/images/svg/symbol/sprite.svg#${iconId}`)
        .skills__card-title=title
        .skills__card-text=text

mixin Skills()
    .skills.divider.divider_skills
        .skills__wrap.container
            h2.skills__title.title Что мы можем?
            .skills__cards
