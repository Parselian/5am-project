include ../button/button

mixin BrandsCard(iconId, additionalClasses, title, text, buttonText)
    - var slideClasses = `brands__slide ${additionalClasses}`
    div(class=slideClasses)
        .brands__slide-icon-wrap
            svg.brands__slide-icon
                use(xlink:href=`./assets/images/svg/symbol/sprite.svg#${iconId}`)
        .brands__slide-title=title
        .brands__slide-text=text
        +Button({
          type: 'inverted',
          additionalClasses: 'brands__slide-button',
          iconPosition: null,
          iconID: null,
          text: buttonText
        })

