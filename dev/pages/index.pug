extends ../layouts/default

block variables
    - var title = '5am'

block mixins
    include ../components/blocks/header/header
    include ../components/blocks/promo/promo
    include ../components/blocks/statistics/statistics
    include ../components/blocks/brands/brands
    include ../components/blocks/skills/skills
    include ../components/blocks/team/team
    include ../components/blocks/proposal/proposal
    include ../components/blocks/footer/footer
    include ../components/blocks/burger-menu/burgerMenu

block content
    +Header()
    +Promo({
      title: "#PropTech",
      buttonSettings: {
        text: "Написать",
        additionalClasses: 'promo__button',
        type: 'normal',
        iconID: null,
        iconPosition: null
      },
      blobs: [
        {
          additionalClasses: 'promo__blob promo__blob_first',
          isAnimated: true,
          size: 'xl',
          iconType: 'svg',
          iconId: 'village-service',
          text: 'Сервис для УК посёлков',
          isAnimated: true,
          animationSettings: {
            timingFunction: 'fade-up',
            delay: 100,
            offset: 300
          }
        },
        {
          additionalClasses: 'promo__blob promo__blob_second',
          size: 'sm',
          iconType: 'svg',
          iconId: 'blob-icon-2',
          text: 'Перейти',
          link: '#',
          isAnimated: false,
          animationSettings: {
            timingFunction: 'fade-up',
            delay: 400,
            offset: 300
          }
        },
        {
          additionalClasses: 'promo__blob promo__blob_third',
          size: 'sm',
          iconType: 'svg',
          iconId: 'village-service',
          text: 'Перейти',
          link: '#',
          isAnimated: false,
          animationSettings: {
            timingFunction: 'fade-up',
            delay: 100,
            offset: 300
          }
        },
        {
          additionalClasses: 'promo__blob promo__blob_fourth',
          size: 'xl',
          iconType: 'img',
          iconId: 'software-agency-icon.png',
          text: 'Студия разработки ПО',
          isAnimated: false,
          animationSettings: {
            timingFunction: 'fade-up',
            delay: 400,
            offset: 300
          }
        },
        {
          additionalClasses: 'promo__blob promo__blob_fifth',
          size: 'xl',
          iconType: 'svg',
          iconId: '3d-design-icon',
          text: 'Студия 3D дизайна',
          isAnimated: true,
          animationSettings: {
            timingFunction: 'fade-up',
            delay: 100,
            offset: 300
          }
        },
        {
          additionalClasses: 'promo__blob promo__blob_sixth',
          size: 'sm',
          iconType: 'svg',
          iconId: 'blob-icon-3',
          text: 'Перейти',
          link: '#',
          isAnimated: false,
          animationSettings: {
            timingFunction: 'fade-up',
            delay: 400,
